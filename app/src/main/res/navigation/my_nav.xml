<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.ucg_project.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/login2"
        android:name="com.example.ucg_project.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login2_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_login2_to_menu"
            app:destination="@id/menu" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.example.ucg_project.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signIn_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_signIn_to_login2"
            app:destination="@id/login2" />
    </fragment>
    <fragment
        android:id="@+id/menu"
        android:name="com.example.ucg_project.Menu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menu_to_news"
            app:destination="@id/news" />
    </fragment>
    <fragment
        android:id="@+id/news"
        android:name="com.example.ucg_project.News"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
</navigation>